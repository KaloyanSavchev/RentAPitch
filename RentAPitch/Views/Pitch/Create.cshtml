@using RentAPitch.Models.ViewModels.Pitch
@model CreatePitchViewModel 
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Add New Pitch</h2>
    <hr />

    <form asp-action="Create" asp-controller="Pitch" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PitchName">Pitch Name:</label>
                    <input type="text" class="form-control" id="PitchName" name="PitchName" required />
                </div>                              
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="Location">Pitch Location:</label>
                    <input type="text" class="form-control" id="Location" name="Location" required />
                </div>
                
                <div class="form-group">
                    <label for="Description">Description:</label>
                    <textarea class="form-control" id="Description" name="Description" required></textarea>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="ImageUrl">Pitch Image:</label>
                    <input type="file" class="form-control-file" id="ImageUrl" name="ImageUrl" required />
                </div>
                <div class="form-group">
                    <label for="PricePerDay">Price:</label>
                    <input type="number" class="form-control" id="PricePerDay" name="PricePerDay" required />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="IsAvailable" name="IsAvailable">
                    <label class="form-check-label" for="IsAvailable">Is Available</label>
                </div>
            </div>

        </div>

        <br />
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Pitch" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>

